<div class="content">
    <div class="container-fluid">
        <div class="flex items-center justify-content-between mb-5">
            <h4 class="page-title mb-0">Danh sách sản phẩm</h4>
            <a class="btn btn-default" href="/categories/create">Tạo loại sản phẩm</a>
        </div>
        
<div class="card">
    <div class="card-body">
        <table class="table table-head-bg-success">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Image</th>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(category, index){ %> 
                    <tr>
                        <td><%=index+1%></td>
                        <td>
                            <img src="<%=category.image%>" alt="image" class="category-label">

                        </td>
                        <td><%=category.code%></td>
                        <td><%=category.name%></td>
                        <td><a class="btn btn-primary btn-sm" href="/categories/update/<%=category._id%>">Sửa</a></td>
                        
                    </tr>
                <% }); %>
                
            </tbody>
        </table>
        <table class="table table-head-bg-primary mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td colspan="2">Larry the Bird</td>
                    <td>@twitter</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
</div>
</div>